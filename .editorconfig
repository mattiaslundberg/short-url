root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{*.js,*.jsx,*.json,*.yml,*.ts,*.tsx,*.css,*.scss,*.svelte}]
indent_size = 2

[*.html]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab
